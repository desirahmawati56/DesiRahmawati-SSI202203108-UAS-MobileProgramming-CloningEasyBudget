

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/easy_budget_green"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".view.welcome.Onboarding4Fragment">

    <ScrollView android:id="@+id/onboarding_screen4_top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="95dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_done_white_48dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:text="@string/onboarding_screen_4_title"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:text="@string/onboarding_screen_4_message"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                android:text="@string/onboarding_screen_4_message2"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/onboarding_screen_4_message3"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="@string/onboarding_screen_4_message4"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/onboarding_screen4_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_screen_4_cta"
        android:textSize="20sp"
        android:theme="@style/Theme.MaterialComponents.NoActionBar"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/onboarding_screen4_top_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-65dp"
        android:textAllCaps="false"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        style="@style/BlueButton"
        app:backgroundTint="@color/secondary" />

</RelativeLayout>
